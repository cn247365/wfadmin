      formData.append('sort', 'ID');
      formData.append('order', 'asc');
      $.postDownload('/YADSCCostCenters/ExportExcel', formData).then(res => {
        setTimeout(() => {
          dialog.modal('hide')
        }, 300);
        toastr.success('导出成功!');
      }).catch(err => {
        setTimeout(() => {
          dialog.modal('hide')
        }, 300);
        $.messager.alert('导出失败', err.statusText, 'error');
      });

    }
