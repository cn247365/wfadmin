<script type="text/javascript">
 //当初始的 HTML 文档被完全加载和解析完成之后
 document.addEventListener('DOMContentLoaded', function () {
     //绑定按钮事件
    $('button[name="saveitembutton"]').on('click', saveyafrsmanagerlistitem);
    $('button[name="deleteitembutton"]').on('click', deleteyafrsmanagerlistitem);
  });
    //判断新增编辑状态
    var MODELSTATE = 'Added';
    var yafrsmanagerlistid = null;
  function openyafrsmanagerdetailwindow(data,state) {
         MODELSTATE = state;
         //判断是否显示功能按钮
        if (MODELSTATE === 'Added') {
          $('#deleteitem-btn-group').hide();
        } else {
          $('#deleteitem-btn-group').show();
        }
        inityafrsmanagerlistdetailview();
         yafrsmanagerlistid = (data.Id || 0);
         $('#yafrsmanagerlistdetailwindow').window('open');
         $('#yafrsmanagerlist_form').form('reset');
         $('#yafrsmanagerlist_form').form('load', data);
             }
  //删除当前记录
  function deleteyafrsmanagerlistitem() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/YAFRSSpecialManagerList/Delete/${yafrsmanagerlistid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $('#yafrsmanagerlistdetailwindow').window('close');
            reloadData();
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
    //async 保存数据
    async function saveyafrsmanagerlistitem() { 
      const $yafrsmanagerlistform = $('#yafrsmanagerlist_form');
      if ($yafrsmanagerlistform.form('enableValidation').form('validate')) {
            let yafrsmanagerlist = $yafrsmanagerlistform.serializeJSON();
            let url = '/YAFRSSpecialManagerList/Edit';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/YAFRSSpecialManagerList/Create';
            }
            var token = $('input[name="__RequestVerificationToken"]', $yafrsmanagerlistform).val();
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        yafrsmanagerlist:yafrsmanagerlist
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        hook = false;
                        $yafrsmanagerlistform.form('disableValidation');
                        $('#yafrsmanagerlistdetailwindow').window("close");
                        toastr.success("保存成功"); 
                        reloadData();
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                       $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
                    });
        }
    }
     //判断是否有没有保存的记录
     function yafrsmanagerlisthasmodified() {
            return hook;

     }


function inityafrsmanagerlistdetailview() {
