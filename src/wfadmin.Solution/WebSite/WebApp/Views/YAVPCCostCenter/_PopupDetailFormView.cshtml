<script type="text/javascript">
  //当初始的 HTML 文档被完全加载和解析完成之后
  document.addEventListener('DOMContentLoaded', function () {
    //绑定按钮事件
    $('button[name="saveitembutton"]').on('click', saveyavpccostcenteritem);
    $('button[name="deleteitembutton"]').on('click', deleteyavpccostcenteritem);
  });
  //判断新增编辑状态
  var MODELSTATE = 'Added';
  var yavpccostcenterid = null;
  function openyavpccostcenterdetailwindow(data, state) {
    MODELSTATE = state;
    //判断是否显示功能按钮
    if (MODELSTATE === 'Added') {
      $('#deleteitem-btn-group').hide();
    } else {
      $('#deleteitem-btn-group').show();
    }
    inityavpccostcenterdetailview();
    yavpccostcenterid = (data.ID || 0);
    $('#yavpccostcenterdetailwindow').window('open');
    $('#yavpccostcenter_form').form('reset');
    $('#yavpccostcenter_form').form('load', data);
  }
  //删除当前记录
  function deleteyavpccostcenteritem() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/yavpccostcenters/Delete/${yavpccostcenterid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $('#yavpccostcenterdetailwindow').window('close');
            reloadData();
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
  //async 保存数据
  async function saveyavpccostcenteritem() {
    const $yavpccostcenterform = $('#yavpccostcenter_form');
    if ($yavpccostcenterform.form('enableValidation').form('validate')) {
      let yavpccostcenter = $yavpccostcenterform.serializeJSON();
      let url = '/yavpccostcenters/Edit';
      //判断是新增或是修改方法
      if (MODELSTATE === 'Added') {
        url = '/yavpccostcenters/Create';
      }
      var token = $('input[name="__RequestVerificationToken"]', $yavpccostcenterform).val();
      $.ajax({
        type: "POST",
        url: url,
        data: {
          __RequestVerificationToken: token,
          yavpccostcenter: yavpccostcenter
        },
        dataType: 'json',
        contentType: 'application/x-www-form-urlencoded; charset=utf-8'
      })
        .done(response => {
          if (response.success) {
            hook = false;
            $yavpccostcenterform.form('disableValidation');
            $('#yavpccostcenterdetailwindow').window("close");
            toastr.success("保存成功");
            reloadData();
          } else {
            $.messager.alert("错误", response.err, "error");
          }
        })
        .fail((jqXHR, textStatus, errorThrown) => {
          $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
        });
    }
  }
  //判断是否有没有保存的记录
  function yavpccostcenterhasmodified() {
    return hook;

  }


  function inityavpccostcenterdetailview() {
    //回车光标移动到下个输入控件
  }
</script>

