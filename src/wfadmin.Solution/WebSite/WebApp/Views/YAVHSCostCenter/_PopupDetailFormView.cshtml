<script type="text/javascript">
 //当初始的 HTML 文档被完全加载和解析完成之后
 document.addEventListener('DOMContentLoaded', function () {
     //绑定按钮事件
    $('button[name="saveitembutton"]').on('click', saveyavhscostcenteritem);
    $('button[name="deleteitembutton"]').on('click', deleteyavhscostcenteritem);
  });
    //判断新增编辑状态
    var MODELSTATE = 'Added';
    var csid = null;
    function openyavhscostcenterdetailwindow(data,state) {
         MODELSTATE = state;
         //判断是否显示功能按钮
        if (MODELSTATE === 'Added') {
          $('#deleteitem-btn-group').hide();
        } else {
          $('#deleteitem-btn-group').show();
        }
        inityavhscostcenterdetailview();
      csid = (data.ID || 0);
         $('#yavhscostcenterdetailwindow').window('open');
         $('#yavhscostcenter_form').form('reset');
         $('#yavhscostcenter_form').form('load', data);
             }
  //删除当前记录
  function deleteyavhscostcenteritem() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/YAVHSCostCenter/Delete/${csid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $('#yavhscostcenterdetailwindow').window('close');
            reloadData();
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
    //async 保存数据
    async function saveyavhscostcenteritem() { 
      const $yavhscostcenterform = $('#yavhscostcenter_form');
      if ($yavhscostcenterform.form('enableValidation').form('validate')) {
            let yavhscostcenter = $yavhscostcenterform.serializeJSON();
            let url = '/YAVHSCostCenter/Edit';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/YAVHSCostCenter/Create';
            }
            var token = $('input[name="__RequestVerificationToken"]', $yavhscostcenterform).val();
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        yavhscostcenter:yavhscostcenter
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        hook = false;
                        $yavhscostcenterform.form('disableValidation');
                        $('#yavhscostcenterdetailwindow').window("close");
                        toastr.success("保存成功"); 
                        reloadData();
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                       $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
                    });
        }
    }
     //判断是否有没有保存的记录
     function yavhscostcenterhasmodified() {
